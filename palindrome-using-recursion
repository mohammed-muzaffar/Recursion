public class Main
{
	public static void main(String[] args) {
        String s = "bbaabb";
        Main obj = new Main();
        System.out.print(obj.isPalidrome(0,s));
	}
	
	static boolean isPalidrome(int i, String s){
	    int n = s.length();
	    if(i >= n/2) return true;
	    if(s.charAt(i) != s.charAt(n-i-1)) {
	        return false;
	    } 
	    
	    return(isPalidrome(i+1, s));
	}

}
